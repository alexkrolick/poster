<h2>Change Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: true, "aria-label": :password %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: true, "aria-label": "Confirm new password" %>
  </div>

  <%= render "devise/shared/links" %>

  <div class="actions">
    <%= f.submit "Change my password" , class: "btn btn-l btn-primary" %>
  </div>
<% end %>

