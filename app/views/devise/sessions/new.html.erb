<h2>Log in</h2>

<%= render "devise/shared/registration_prompt" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", "aria-label": :email, placeholder: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", "aria-label": :password, placeholder: true %>
  </div>

  <%= render "devise/shared/links" %>

  <% if devise_mapping.rememberable? %>
    <div class="field devise__rememberMe">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "btn btn-l btn-primary" %>
  </div>

<% end %>

