.container
  .row
    .col-md-12
      p#notice = notice

      .posts-index-header.my-5
        h1 All Posts

      .posts-index
        table.table.table-hover
          thead
            tr
              th ID
              th Uploads
              th Title
              th Authors
              th Publisher
              th Citations
              th colspan="3"
                | Actions

          tbody
            - @posts.each do |post|
              tr
                td = post.id
                td
                  - if post.uploads.any?
                    - post.uploads.each do |upload|
                      = link_to upload.id, upload
                td = post.title
                td = post.authors
                td = post.publisher
                td = post.citations.count
                td = link_to 'Show', post
                td = link_to 'Edit', edit_post_path(post)
                td = link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

        = will_paginate @posts
