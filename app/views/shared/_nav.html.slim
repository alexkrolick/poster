      ul class="subnav ml-auto"
        - if user_signed_in?

          - if @post.present? 
            li class="nav-item active"
              = link_to 'Save as Draft', root_path, class: "nav-link mr-3"
            li class="nav-item active"
              = link_to 'Publish', root_path, class: "btn btn-secondary mr-3"

          - else
            = link_to 'Write', write_path, class: "nav-link mr-3"

            li class="nav-item active"
                = link_to 'Upload a PDF', new_upload_path, class: "btn btn-secondary mr-3"

